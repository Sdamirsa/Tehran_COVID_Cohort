#define a function for calculating delta (interval between admission and labratory exam)
def tarikhberoz (args):
    Y = int (args [0:4])
    M = int (args [5:7])
    D = int (args [8:10])
    Y_D= Y*365
    if M<=6:
        M_D=M*31
    elif M>6:
        M_D=(M*30)+6
    else:
        print()
    Total_D= Y_D+M_D+D
    return Total_D

